---
/* Import default lay-out */
import Default from "../layouts/default.astro";

/* Imported components */
import Card from "../components/card.astro";

/* Imported icons */
import ArrowUpRight from "../components/icons/ph:arrow-up-right.svg?raw";

const { headings } = Astro.props;
---

<Default title="vriOS â–ª [Index]">
  <header>
    <div>
      <h1>vriOS <span>system</span></h1>
      <span>spec : 10.11.24</span>
    </div>
    <p>
      is an opinionated set of design principles and foundational philosophies
      for creating digital and physical experiences by Danny de Vries.
    </p>
    <a href="#">Read about the architecture</a>
  </header>
  <main>
    <img src="https://placehold.co/1800x600" />
    <section class="grid-xl">
      <Card
        image="https://placehold.co/600x600"
        title="principles"
        description="Building blocks for interface applications"
        icon={ArrowUpRight}
      />
      <Card
        image="https://placehold.co/600x600"
        title="assets"
        description="Download brand assets for public use"
        icon={ArrowUpRight}
      />
      <Card
        image="https://placehold.co/600x600"
        title="typography"
        description="Download wordmarks, icons and logos"
        icon={ArrowUpRight}
      />
      <Card title="iconography" description="dshflsjflsjfsfl" />
      <Card title="components" description="dshflsjflsjfsfl" />
      <Card title="colors" description="dshflsjflsjfsfl" />
      <Card title="motion" description="dshflsjflsjfsfl" />
      <Card title="grids" description="dshflsjflsjfsfl" />
      <Card title="spacing" description="dshflsjflsjfsfl" />
      <Card title="materials" description="dshflsjflsjfsfl" />
      <Card title="textiles" description="dshflsjflsjfsfl" />
    </section>
  </main>
</Default>

<style is:global>
  body {
    background: var(--color-tertairy);
    background-image: radial-gradient(#efefef 0.8px, #fff 0.8px);
    background-size: 12px 12px;
    font-family: "Inter", system-ui;
    margin: var(--space-m);
  }
</style>

<style>
  header {
    background: #fff;
    border-radius: var(--radius-m);
    padding: var(--space-l);
  }

  header h1 {
    font-size: var(--size-3xl);
  }

  header div {
    display: flex;
    align-items: center;
  }

  header div > span {
    background: #e9f4ff;
    padding: var(--space-s) var(--space-s);
    border-radius: var(--radius-s);
    color: #0060f2;
    margin-left: var(--space-m);
  }

  header p {
    font-size: var(--size-l);
    width: 50vw;
  }

  section {
    margin-top: var(--space-l);
  }

  img {
    border-radius: var(--radius-l);
    margin-top: var(--space-m);
  }
</style>
